CREATE TABLE Flights (
    FlightID NUMBER ,
    FlightNumber VARCHAR2(10) NOT NULL UNIQUE,
    DepartureAirport VARCHAR2(50) NOT NULL,
    ArrivalAirport VARCHAR2(50) NOT NULL,
    DepartureTime TIMESTAMP NOT NULL,
    ArrivalTime TIMESTAMP NOT NULL,
    Gate VARCHAR2(10),
    Status VARCHAR2(20) NOT NULL   
);
 
CREATE TABLE Baggage (
    BaggageID NUMBER ,
    FlightID NUMBER,
    PassengerID NUMBER,
    BaggageWeight NUMBER(10, 2),  
    BaggageNumber VARCHAR2(50) NOT NULL UNIQUE,
    Status VARCHAR2(20) NOT NULL
);

CREATE TABLE FlightSeats (
    SeatID NUMBER ,
    FlightID NUMBER,
    SeatNumber VARCHAR2(10) NOT NULL,
    SeatStatus VARCHAR2(20) NOT NULL
);
 CREATE TABLE Users (
    UserID NUMBER ,
    FullName VARCHAR2(100) NOT NULL,
    Email VARCHAR2(100) NOT NULL UNIQUE,
    PhoneNumber VARCHAR2(20),
    PassWord VARCHAR2(255) NOT NULL
);
CREATE TABLE Baggage (
    BaggageID NUMBER ,
    FlightID NUMBER,
    PassengerID NUMBER,
    BaggageWeight NUMBER(10, 2),  -- Luggage weight, accurate to two decimal places
    BaggageNumber VARCHAR2(50) NOT NULL UNIQUE,
    Status VARCHAR2(20) NOT NULL  -- Baggage status
);
 
CREATE TABLE Bookings (
    BookingID NUMBER,
    UserID NUMBER,
    FlightID NUMBER,
    BookingDate TIMESTAMP NOT NULL
);
